<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-12"> </div>    
            <div class="col-md-6 col-sm-12 mt-5">
             <h2>Log in</h2>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class: 'required form-control', autofocus: true, autocomplete: "email" %>
                  </div>

                  <div class="field">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, class: 'required form-control', autocomplete: "current-password" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me,class: 'form-check-input' %>
                      <%= f.label :remember_me, class: 'form-check-label'%>
                    </div>
                  <% end %>

                  <div class="actions">
                    <%= f.submit "Log in", class: 'btn btn-success  btn-lg btn-block mt-2' %>
                  </div>
                <% end %>
                
                <%= render "devise/shared/links" %>
            </div>
       </div>
    </div>
</div>