<div class="container-fluid mt-3">
<div class="row">
<div class="col-md-2">
<button class="btn btn-primary" onclick="history.back()">Go Back</button>
</div>
<div class="col-md-10">
<div class="mt-2">
<% if@get_user.present?%>
<%= image_tag(@get_user.profile,style:"width:150px;height:150px",class:'rounded-circle')%>
<%else%>
<%= image_tag("/no-profile.jpg",style:"width:150px;height:150px",class:'rounded-circle') %>
<% end %>
</div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.fullname : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="empno">Employee Number</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.fullname : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.address : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.city : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="designation">Designation</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.designation : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="doj">Date of Joining</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.doj : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="department">Department</label>
                <input type="text" class="form-control" value="<%= (@get_user.present?) ?  @get_user.department : nil %>" readonly>
            </div>
            
        </div>  

    </div>
  </div>
  </div>
</div>
  
  
  
  
