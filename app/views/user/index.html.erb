<h1>My Account</h1>

<div class="container">
<% if@userinfos.present?%>
<%= image_tag(@userinfos.profile,style:"width:150px;height:150px",class:'rounded-circle')%>
<%else%>
<%= image_tag("/no-profile.jpg",style:"width:150px;height:150px",class:'rounded-circle') %>
<% end %>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.fullname : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="empno">Employee Number</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.fullname : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.address : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.city : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="designation">Designation</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.designation : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="doj">Date of Joining</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.doj : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="department">Department</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.department : nil %>" readonly>
            </div>
            
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.phone : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth</label>
                <input type="text" class="form-control"  value="<%= (@userinfos.present?) ?  @userinfos.dob : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="bloodgroup">Blood Group</label>
                <input type="text" class="form-control"  value="<%= (@userinfos.present?) ?  @userinfos.blood_group : nil %>" readonly>
            </div>
            <div class="form-group">
                <label for="emergency_number">Emergency Number</label>
                <input type="text" class="form-control" value="<%= (@userinfos.present?) ?  @userinfos.emergency_number : nil %>" readonly>
            </div>
            <%= link_to "EDIT", user_edit_path, class:'btn btn-success mt-3',:method=>"get"%>
        </div>
         

    </div>
</div>
  
  
  
  
