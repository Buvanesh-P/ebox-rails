

<div class="container">
  <div class="mt-2 row">
    <div class="col-md-10">
      <%= link_to "Back", posts_path %>
    </div>
    <div class="col-md-2 float-end">
      <%= link_to "Edit", edit_post_path(@post), class:'btn btn-outline-success' %>
    </div>
    
    <div class="card mt-2">
    <div class="card-title">  <img src="https://picsum.photos/200" class="rounded-circle" alt="Cinque Terre" width="50" height="50"> <%= @post.user.email %></div>
      <div class="card-body">
        <%= render @post %>
      </div>
    </div>
    
  </div>

  <div class="float-end mt-2">
        <%= button_to "Delete", @post, method: :delete, class:'btn btn-outline-danger' %>
  </div>

</div>


